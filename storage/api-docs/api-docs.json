    "servers": [
        {
            "url": "http://localhost:8000/api",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/ingredients": {
            "get": {
                "summary": "Get list of ingredients",
                "description": "Returns list of ingredients",
                "operationId": "getIngredientsList",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "post": {
                "summary": "Store ingredient",
                "description": "Store ingredient",
                "operationId": "postIngredient",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/meals": {
            "get": {
                "summary": "Get list of meals",
                "description": "Returns list of meals",
                "operationId": "getMealsList",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "post": {
                "summary": "Store meal",
                "description": "Store meal",
                "operationId": "postMeal",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/meals?ingredient='string'": {
            "get": {
                "summary": "Get 3 meals",
                "description": "Returns list 3 of meals",
                "operationId": "get3MealsList",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/meals/{id}": {
            "get": {
                "summary": "Get meal",
                "description": "Returns meal",
                "operationId": "getMeal",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Meal id",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Projects",
            "description": "API Endpoints of Projects"
        }
    ],
    "security": [
        []
    ]
}